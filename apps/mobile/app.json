{
  "expo": {
    "name": "Hopefull",
    "slug": "hopefull",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hopefull",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hopefull.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access for video calls and profile photos",
        "NSMicrophoneUsageDescription": "We need microphone access for video and audio calls",
        "NSPhotoLibraryUsageDescription": "We need photo library access to upload profile photos",
        "NSFaceIDUsageDescription": "We use Face ID for secure login"
      },
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.hopefull.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-local-authentication",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#4F46E5"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Hopefull to access your camera for video calls"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Hopefull to access your photos to upload a profile picture"
        }
      ],
      "@react-native-google-signin/google-signin",
      "expo-apple-authentication"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
